<ItemCard>:
    orientation: "vertical"
    size_hint: None, None
    size: dp(80), dp(80)
    padding: dp(6)
    radius: [16]
    elevation: 4
    MDBoxLayout:
        size_hint: None, None
        # Size = Image (32Ã—32) + Padding (4 each side) = 32 + 4*2 = 40
        size: dp(40), dp(40)
        padding: dp(4)
        pos_hint: {"center_x": 0.5}
        canvas.before:
            # 1) Fill outer line
            Color:
                rgba: root.borderColor
            Line:
                width: dp(1)
                rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
            # 2) Fill inner area
            Color:
                rgba: root.backgroundColor
            RoundedRectangle:
                size: (self.width, self.height)
                pos: (self.x, self.y)
                radius: [10]
        FitImage:
            source: root.icon
            size_hint: None, None
            size: dp(32), dp(32)
            allow_stretch: True
            keep_ratio: True

    Widget: # Padding
        size_hint_y: None
        height: dp(6)
    MDLabel:
        text: root.name
        halign: "center"
        theme_text_color: "Custom"
        text_color: root.textColor
        font_style: "Body"
        role: "small"