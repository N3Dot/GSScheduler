<ScheduleCard>:
    size_hint: 1, None
    height: dp(100)
    padding: dp(8)
    radius: [12]
    elevation: 4
    MDBoxLayout:
        orientation: "horizontal"
        spacing: dp(8)

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(4)

            MDBoxLayout:
                orientation: "horizontal"
                MDBoxLayout:
                    MDLabel:
                        text: f"[b]{root.startTime} - {root.endTime}[/b]"
                        markup: True
                        size_hint_x: None
                        width: dp(265)
                        halign: "left"
                        font_style: "Title"
                        role: "large"
            
            MDBoxLayout:
                MDLabel:
                    text: f"[i]â€¢ {root.description}[/i]"
                    markup: True
                    max_lines: 1
                    shorten: True
                    shorten_from: "right"
                    size_hint_x: None
                    width: dp(320)
                    halign: "left"
                    font_style: "Label"
                    role: "medium"

            MDBoxLayout:
                orientation: "horizontal"
                spacing: dp(6)
                MDIcon:
                    icon: "target"
                    pos_hint: {"center_y": 0.5}
                MDLabel:
                    text: f"{root.questTotal}"
                    halign: "left"
                    font_style: "Body"
                    role: "medium"
                    pos_hint: {"center_y": 0.4}
                MDIcon:
                    icon: "gold"
                    pos_hint: {"center_y": 0.5}
                MDLabel:
                    text: f"{root.expectedLoot}"
                    halign: "left"
                    font_style: "Body"
                    role: "medium"
                    pos_hint: {"center_y": 0.4}

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(4)
            spacing: dp(30)

            MDBoxLayout:
                Widget:
                MDButton:
                    size_hint: None, None
                    size: dp(24), dp(24)
                    style: "text"
                    radius: [15, 15, 15, 15]
                    on_release: app.spawn_schedule_options(self, root)
                    MDButtonIcon:
                        icon: "dots-vertical"
                        size_hint: None, None
                        size: dp(16), dp(16)
                        pos_hint: {'center_x': 0.8}

            MDBoxLayout:
                Widget:
                MDSwitch:
                    active: 1