<QuestLockCard>:
    size_hint_y: None
    height: "115dp"
    padding: "4dp"
    MDRelativeLayout:
        MDCheckbox:
            on_active: root.on_checkbox_active(*args)
            size_hint: None, None
            size: dp(48), dp(48)
            color_active: app.theme_cls.tertiaryColor
            pos_hint: {"center_x": 0.08, "center_y": 0.86}
        MDBoxLayout:
            orientation: "horizontal"
            padding: "5dp"
            MDBoxLayout:
                size_hint_x: 0.15
            MDBoxLayout:
                pos_hint: {'top': 1}
                orientation: "vertical"
                adaptive_height: True
                spacing: "5dp"
                size_hint_x: 0.85
                MDLabel:
                    text: f"[b]Độ Khó:[/b] {root.difficulty}"
                    font_style: "Label"
                    role: "large"
                    markup: True
                    adaptive_height: True
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.tertiaryColor
                MDLabel:
                    text: f"[b]Mô Tả:[/b] {root.description}"
                    font_style: "Body"
                    role: "medium"
                    markup: True
                    adaptive_height: True