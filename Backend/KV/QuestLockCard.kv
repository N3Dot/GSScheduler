<QuestLockCard>:
    size_hint_y: None
    height: "115dp"
    padding: "4dp"
    MDRelativeLayout:
        MDCheckbox:
            pos_hint: {"top": 0.96, "right": 0.97}
        MDBoxLayout:
            orientation: "horizontal"
            padding: "5dp"
            MDBoxLayout:
                pos_hint: {'top': 1}
                orientation: "vertical"
                adaptive_height: True
                spacing: "5dp"
                size_hint_x: 0.85
                MDLabel:
                    text: f"[b]Độ Khó:[/b] {root.difficulty}"
                    font_style: "Label"
                    role: "large"
                    markup: True
                    adaptive_height: True
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primaryColor
                MDLabel:
                    text: f"[b]Mô Tả:[/b] {root.description}"
                    font_style: "Body"
                    role: "medium"
                    markup: True
                    adaptive_height: True
            MDBoxLayout:
                size_hint_x: 0.15